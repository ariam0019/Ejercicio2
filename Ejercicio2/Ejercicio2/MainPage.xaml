<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio2.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="txtnombre" Placeholder="Nombre" Keyboard="Text"/>
        <Entry x:Name="txtapellidos" Placeholder="Apellidos" Keyboard="Text"/>
        <Entry x:Name="txtedad" Placeholder="Edad" Keyboard="Numeric"/>
        <Entry x:Name="txtcorreo" Placeholder="Correo" Keyboard="Text"/>

        <Button x:Name="btninformacion" Text="Informacion" Clicked="btninformacion_Clicked"/>


    </StackLayout>

</ContentPage>
